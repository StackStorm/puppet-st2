[Unit]
Description=StackStorm service <% @process_name %>
After=network.target

[Service]
Type=simple
User=root
Group=root
Environment="DAEMON_ARGS=--config-file /etc/st2/st2.conf"
ExecStart=/usr/bin/<%- @process_name %> $DAEMON_ARGS
TimeoutSec=60
PrivateTmp=true
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
